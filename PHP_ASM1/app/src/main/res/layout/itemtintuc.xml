<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:color/holo_red_dark"/>
        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/itemTopic"
                android:layout_width="wrap_content"
                android:text="Europe"
                android:textColor="#4E4B66"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/itemPost"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Ukraine's President Zelensky to BBC: Blood money being paid..."
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/Imgposter"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_people_alt_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:id="@+id/itemPoster"
                    android:text="Công Tuyền"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="28dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/Imgtimer"
                    android:layout_toEndOf="@+id/itemPoster"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_watch_later_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/itemTimer"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/Imgtimer"
                    android:text="4h ago"
                    android:layout_height="wrap_content"/>
                <!--        Poster and timepost-->
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>